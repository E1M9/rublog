<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th>Posted on</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
          <td><%= post.created_at.to_date %></td>
          <td><%= link_to 'Show', post, class: "btn btn-info btn-sm" %></td>
          <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-warning btn-sm" %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'New Post', new_post_path, class: "btn btn-primary btn-xs" %>
